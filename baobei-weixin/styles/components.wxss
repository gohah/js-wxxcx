/*topbar*/
.topbar {
    background:#FAFAFA;
    height:94rpx;
    line-height:94rpx;
    align-items:center;
    border-bottom:1rpx solid #E5E5E5;
}
.topbar_item {
    font-size: 28rpx;
    color: #353535;
    text-align:center;
}
.topbar_i_txt {
    display: inline-block;
    padding:0 30rpx;
    line-height:88rpx;
    border-bottom:6rpx solid transparent;
}
.topbar_item.active .topbar_i_txt {
    border-bottom:6rpx solid #F26F21;
}

/*navbar*/
.weui-navbar_space {
    height:100rpx;
}
.order_navbar {
    background: #FAFAFA;
}
.order_navbar .weui-bar__item_on {
    background:#EAEAEA;
}
.order_navbar_ico {
    display: inline-block;
    width:16rpx;
    height:30rpx;
    vertical-align:-14rpx;
    margin-left:8rpx;
}
.order_navbar .weui-navbar__title {
    vertical-align: middle;
}

/*no data*/
.nodata {
    text-align:center;
}
.nodata_img {
    width:180rpx;
    height:180rpx;
}
.nodata_txt {
    display: block;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #888888;
}

/*weui cell tips*/
.weui-cells__tips {
    overflow: hidden;
}
.weui-cells__tips text {
    float:left;
}
.weui-cells__tips .tips_link {
    color:#586C94;
    margin:0 10rpx;
}

/*title bar with triangle down*/
.title_bar_triangle {
    position: relative;
    height:100rpx;
    line-height:100rpx;
    text-align:center;
    color:#666;
    background: #F8F8F8;
    box-shadow: inset 0 -1rpx 0 0 #E5E5E5;
}
.title_bar_triangle.arrow:after {
    content: '';
    position: absolute;
    left:50%;
    bottom:-12rpx;
    width:35rpx;
    height:16rpx;
    margin-left:-18rpx;
    background: url('data:image/false;base64,') 50% 50% no-repeat;
    background-size:100%;
}

/*load over line*/
.md_loadover {
    justify-content: center;
    line-height: 36rpx;
    padding: 30rpx 30rpx;
}
.md_loadover_line {
    width:30%;
    border-top:1rpx solid #E5E5E5;
    margin-top:18rpx;
}
.md_loadover_txt {
    padding:0 20rpx;
}