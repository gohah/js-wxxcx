.plan {

}
.plan_top {
	padding: 16rpx;
}
.plan_top_content {
	padding:30rpx 0;
	background: #D04B4B;
	border-radius: 10rpx;
	text-align:center;
	color:#fff;
}
.plan_top_txt {
	display: block;
}
.plan_top_title {
	display: block;
	font-size:34rpx;
}
.plan_top_btn {
	display: inline-block;
	width:360rpx;
	height:70rpx;
	line-height: 70rpx;
	margin-top:20rpx;
	background: #F8F8F8;
	border: 1rpx solid rgba(5,5,5,0.10);
	border-radius: 10rpx;
	background:#F8F8F8;
	font-size: 32rpx;
	color: #D04B4B;
}
.plan_list {

}
.plan_i_title {
	font-size: 34rpx;
	color: #333333;
}
.plan_i_status {
	font-size: 34rpx;
}
.plan_i_status.ing {
	color: #586C94;
}
.plan_i_status.pass {
	color: #09BB07;
}
.plan_i_status.fail {
	color: #D04B4B;
}
.plan_i_status.drop {
	color: #999;
}
.plan_list .weui-form-preview {
	margin-bottom:16rpx;
}

/*没有数据*/
.nodata {
	margin-top:180rpx;
	margin-bottom:180rpx;
}