.container {}

.idx_top {
    position: relative;
    background: #D04B4B;
    padding-top: 40rpx;
    padding-bottom:140rpx;
    border-top: 1rpx solid #fff;
    color:#fff;
    text-align:center;
}

.idx_top_hello {
    display: block;
    font-size:34rpx;
}

.idx_top_desc {
    display: block;
    line-height: 45rpx;
}

.idx_top_bell {
    position: absolute;
    right: 56rpx;
    top: 48rpx;
}

.idx_top_bell_img {
    width: 54rpx;
    height: 54rpx;
}

.idx_top_bell_num {
    position: absolute;
    right: -12rpx;
    top: -2rpx;
    width: 24rpx;
    height: 24rpx;
    color: #fff;
    text-align: center;
    line-height: 36rpx;
    border-radius: 50%;
    background: #F12C20;
}

.idx_content {}
.idx_abstract {
    background: #fff;
    padding-bottom:20rpx;
}
.idx_add {
    position: relative;
    margin-top:-66rpx;
}
.idx_add_arc {
    width:750rpx;
    height:68rpx;
}
.idx_add_btn {
    position: absolute;
    top:0;
    left:50%;
    margin-top:-60rpx;
    margin-left:-60rpx;
    width:120rpx;
    height:120rpx;
    z-index:3;
}
.idx_add_icon {
    width:100%;
    height:100%;
}
.idx_add_txt {
    display: block;
    text-align:center;
    color:#666;
    line-height: 1;
}
.idx_abstract_info {
    margin:0 30rpx;
    margin-top:20rpx;
    justify-content:space-between;
}
.idx_info_item {
    width:48%;
    height:94rpx;
    border: 1rpx solid #B2B2B2;
    border-radius: 10rpx;
    align-items:center;
    box-sizing:border-box;
    padding-left:30rpx;
}
.idx_info_ico {
    width:50rpx;
    height:50rpx;
}
.idx_info_i_content {
    margin-left:20rpx;
}
.idx_info_i_txt {
    display: block;
    line-height: 37rpx;
    font-size:28rpx;
}
.idx_info_i_num {
    color:#f26f21;
}

