.pols_i_logo {
    width:60rpx;
    height:60rpx;
    margin-right:10rpx;
    border-radius:50%;
    border:1rpx solid #dbdbdb;
}
.weui-form-preview__label {
    align-items:center;
}
.pols_i_title {
    font-size: 34rpx;
    color:#333;
}

.pols_edit_ico {
    margin-top:20rpx;
    width:50rpx;
    height:50rpx;
}
.weui-form-preview {
    margin-bottom:30rpx;
}
.weui-cells__title-link {
    color:#F26F21;
}


/*没有数据*/
.idx_content_none {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: stretch;
    justify-content: center;
    padding-top: 50%;
}

.idx_none_item {}

.idx_none_txt {
    line-height: 48rpx;
}

.idx_none_btn {
    width: 116rpx;
    height: 116rpx;
    margin: 20rpx auto 0 auto;
}

.idx_none_btn_ico {
    width: 100%;
    height: 100%;
}
