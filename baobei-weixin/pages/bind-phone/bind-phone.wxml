<view class="container bind_phone">
	<view class="space_30"></view>
	<view class="weui-cells weui-cells_after-title">
		<view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入手机号" bindinput="phoneInput" />
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">验证码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入短信验证码" bindinput="codeInput" />
            </view>
            <view class="weui-cell__ft">
                <view class="weui-vcode-btn" bindtap="sendCode">获取验证码</view>
            </view>
        </view>
	</view>
    <view class="md_form_ft layout">
        <button type="primary" class="md_form_btn" bindtap="submitFun">绑定手机</button>
    </view>
</view>

<include src="/components/components.wxml"/>